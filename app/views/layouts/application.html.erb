<!DOCTYPE html>
<html>
<head>
  <title>Paraglide</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <% unless current_user %>
        <%= link_to('log in',user_omniauth_authorize_path(:facebook)) %>
    <% else %>
        <%= current_user.email %>
        <%= link_to "sign out", destroy_user_session_path %>
    <% end %>

    <%= yield %>

</body>
</html>
