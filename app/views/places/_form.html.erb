<%= simple_form_for(@place) do |f| %>
  <div class="field">
    <%= f.input :name %>
    <%= f.input :height %>
    <%= f.input :description, as: :text %>

    <%= f.input :address %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>

    <%= f.input :wind_north, as: :boolean %>
    <%= f.input :wind_north_east, as: :boolean %>
    <%= f.input :wind_east, as: :boolean %>
    <%= f.input :wind_east_south, as: :boolean %>
    <%= f.input :wind_south, as: :boolean %>
    <%= f.input :wind_south_west, as: :boolean %>
    <%= f.input :wind_west, as: :boolean %>
    <%= f.input :wind_west_north, as: :boolean %>
  </div>
  <div class="form-actions">
    <%= f.submit class:"btn btn-success" %>
    <%= f.submit t('.back'), class: 'btn' %>
  </div>
<% end %>
